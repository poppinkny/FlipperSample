<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:useDefaultMargins="true"
    android:alignmentMode="alignBounds"
    android:columnOrderPreserved="false"
    android:columnCount="2"
    android:rowCount="15"
    >

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewFlipper2"
        android:layout_gravity="center_horizontal"
        android:layout_row="2"
        android:layout_column="1">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center">


                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expense"
                        android:id="@+id/button_expense"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:gravity="right"
                        android:textSize="30dp"
                        android:textColor="#7B0AAB"
                        android:background="@layout/button_selector_expense"
                        android:shadowColor="#A8A8A8"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        android:textAlignment="inherit"
                        android:longClickable="false"
                        android:paddingLeft="70dp"
                        android:paddingRight="70dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Income"
                        android:id="@+id/button_income"
                        android:gravity="left"
                        android:textSize="30dp"
                        android:textColor="#2929D6"
                        android:background="@layout/button_selector_income"
                        android:shadowColor="#2929D6"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        android:textAlignment="center"
                        android:paddingLeft="75dp"
                        android:paddingRight="75dp" />

                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView37"
                    android:textSize="30dp"
                    android:paddingLeft="150dp"
                    android:paddingRight="50dp"
                    android:singleLine="false" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fuel"
                    android:id="@+id/textView38"
                    android:textSize="30dp"
                    android:paddingLeft="150dp"
                    android:paddingRight="30dp"
                    android:background="#ff94ff7e"
                    android:singleLine="false" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entertainment"
                    android:id="@+id/textView39"
                    android:textSize="30dp"
                    android:paddingLeft="150dp"
                    android:paddingRight="30dp"
                    android:background="#ffdbffa9"
                    android:singleLine="false" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eating Out"
                    android:id="@+id/textView40"
                    android:textSize="30dp"
                    android:paddingLeft="150dp"
                    android:paddingRight="30dp"
                    android:background="#ff94ff7e"
                    android:singleLine="false" />
            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center" >

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView26"
                    android:paddingLeft="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category Details"
                    android:id="@+id/textView27"
                    android:textSize="30dp"
                    android:gravity="left"
                    android:background="#EDA6FF"
                    android:textColor="#7B0AAB"
                    android:paddingRight="430dp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView28"
                    android:paddingLeft="0dp"
                    android:textSize="400dp" />

                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:id="@+id/textView29"
                            android:textSize="30dp"
                            android:paddingLeft="150dp"
                            android:paddingRight="50dp"
                            android:background="#ff94ff7e"
                            android:singleLine="false" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="date"
                            android:ems="10"
                            android:id="@+id/editText5"
                            android:textSize="30dp"
                            android:background="#ffdbffa9" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chart Color"
                            android:id="@+id/textView30"
                            android:textSize="30dp"
                            android:paddingLeft="150dp"
                            android:paddingRight="50dp"
                            android:background="#ffdbffa9"
                            android:singleLine="false" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="date"
                            android:ems="10"
                            android:id="@+id/editText7"
                            android:textSize="30dp"
                            android:background="#ff94ff7e" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView31"
                            android:textSize="40dp"
                            android:paddingLeft="150dp"
                            android:paddingRight="50dp"
                            android:singleLine="false" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView32"
                            android:textSize="60dp"
                            android:paddingLeft="150dp"
                            android:paddingRight="50dp"
                            android:singleLine="false" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent" >

                            <Button
                                android:text="Reset"
                                android:textColor="#7B0AAB"
                                android:textSize="30dp"
                                android:layout_width="180dp"
                                android:layout_height="50dp"
                                android:background="@layout/button_selector_reset_exp"
                                android:shadowColor="#7B0AAB"
                                android:shadowDx="0"
                                android:shadowDy="0"
                                android:shadowRadius="5"
                                android:layout_marginRight="30dp"
                                android:id="@+id/button" />

                            <Button
                                android:text="Done"
                                android:textColor="#7B0AAB"
                                android:textSize="30dp"
                                android:layout_width="180dp"
                                android:layout_height="50dp"
                                android:background="@layout/button_selector_reset_exp"
                                android:shadowColor="#7B0AAB"
                                android:shadowDx="0"
                                android:shadowDy="0"
                                android:shadowRadius="5"
                                android:id="@+id/button2" />
                        </LinearLayout>
                    </TableRow>
                </TableLayout>
            </TableRow>
        </TableLayout>

    </ViewFlipper>


</GridLayout>
